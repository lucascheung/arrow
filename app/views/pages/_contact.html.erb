<div id='contact' class="contact-wrapper" >
  <div class="contact-photo"></div>
  <div class="contact-container d-flex align-items-center">
    <div class="contact-form">
      <h1>CONTACT US</h1>
      <%= form_for @lead, :html => { id:'lead-form' } do |f| %>
        <div class="d-flex justify-content-between">
          <div class="form-group">
            <%= f.label :first_name %>
            <%= f.text_field :first_name, class: 'form-control', required:true %>
          </div>

          <div class="form-group">
            <%= f.label :last_name %>
            <%= f.text_field :last_name, class: 'form-control',required:true %>
          </div>
        </div>


        <div class="form-group">
          <%= f.label :email, "Email address" %>
          <%= f.text_field :email, class: 'form-control', required:true %>
        </div>

        <div class="d-flex justify-content-between">
          <div class="form-group">
            <%= f.label :company, "Company (Optional)" %>
            <%= f.text_field :company, class: 'form-control' %>
          </div>

          <div class="form-group">
            <%= f.label :phone_number, "Phone Number (Optional)" %>
            <%= f.text_field :phone_number, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :message %>
          <%= f.text_area :message, class: 'form-control big-box', required:true %>
        </div>

        <%= f.submit "Send", class: 'btn-send', 'data-toggle' => 'modal', 'data-target' => "#welcome-modal" %>
      <% end %>
    </div>
  </div>
</div>

<%= render 'welcome_modal' %>


